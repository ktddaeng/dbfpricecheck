<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    tools:background="@color/colorPrimaryLight">

    <LinearLayout
        android:id="@+id/rec_restock_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rec_restock_lastdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorMenuText"
                android:layout_weight="2"
                tools:text="11/11/1111"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorMenuText"
                android:layout_weight="1"
                android:text="Location:"/>
            <TextView
                android:id="@+id/rec_restock_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorMenuText"
                android:layout_weight="1"
                tools:text="A2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorMenuText"
                android:layout_weight="1"
                android:text="Showroom:"/>
            <TextView
                android:id="@+id/rec_restock_showroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMenuText"
                android:textSize="20sp"
                android:layout_weight="1"
                tools:text="55"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorMenuText"
                android:layout_weight="1"
                android:text="Backstore:"/>
            <TextView
                android:id="@+id/rec_restock_backstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorMenuText"
                android:layout_weight="1"
                tools:text="55"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rec_restock_other1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:textColor="@color/colorMenuText"
            tools:text="INSERT TEXT HERE 1"/>
        <TextView
            android:id="@+id/rec_restock_other2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:textColor="@color/colorMenuText"
            tools:text="INSERT TEXT HERE 2"/>
        <TextView
            android:id="@+id/rec_restock_other3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:textColor="@color/colorMenuText"
            tools:text="INSERT TEXT HERE 3"/>
        <TextView
            android:id="@+id/rec_restock_other4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:textColor="@color/colorMenuText"
            tools:text="INSERT TEXT HERE 4"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/fragment_log" />
</LinearLayout>